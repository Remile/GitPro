<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
android:id="@+id/widget31"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="#ffffff"
xmlns:android="http://schemas.android.com/apk/res/android"
android:scrollbars="vertical"
>

<ImageView
    android:id="@+id/login_logo"
    android:layout_centerHorizontal="true"
    android:layout_width="fill_parent"
    android:layout_height="153px"
    android:layout_above="@+id/widget36"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:scaleType="fitXY"
    android:src="@drawable/logo_1" >

</ImageView>

<RelativeLayout
    android:id="@+id/widget36"
    android:layout_width="fill_parent"
    android:layout_height="218px"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true" >

    <TextView
        android:id="@+id/wantWord"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/userName_1"
        android:gravity="center"
        android:text="密   码"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/userName_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/wantName"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/wantName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="帐   号"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/passWord_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:password="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/wantWord"
        android:ems="10"
        android:textSize="18sp" />
</RelativeLayout>

<Button
    android:id="@+id/login_1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/widget36"
    android:gravity="center"
    android:text="登  录"
    android:textStyle="bold" />

</RelativeLayout>
